<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/fondox2"

  >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"

        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:id="@+id/toolbar"

        android:background="@color/purple_500"
        app:titleTextColor="@android:color/white"
        android:layout_height="?actionBarSize">


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/carta"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="100dp"
            android:elevation="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <TextView
                android:id="@+id/texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:padding="20dp"
                android:text="Elige si deseas calcular el area tomando foto de la figura, o si ya tienes foto, agregala desde galerÃ­a."
                android:textSize="17dp"

                ></TextView>

        </androidx.cardview.widget.CardView>




        <Button
            android:layout_width="wrap_content"
            android:layout_marginTop="100dp"
            android:text="ANALIZAR"
            android:layout_gravity="center"
            android:background="@android:color/holo_blue_dark"
            android:padding="15dp"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:id="@+id/ButtonIMAGENCV"
            android:layout_height="wrap_content">
        </Button>




        <Button
            android:id="@+id/btnDrawPolygon"
            android:layout_marginTop="50dp"
            android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:padding="15dp"

            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="COMO FUNCIONA"
            android:textSize="18dp" />


    </LinearLayout>




</RelativeLayout>