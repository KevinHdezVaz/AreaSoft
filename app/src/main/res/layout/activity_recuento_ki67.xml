<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RecuentoKi67Activity"
    android:weightSum="1"
    android:padding="20dp"
    android:keepScreenOn="true">
    <ImageView
        android:id="@+id/iv1"
        android:src="@drawable/ic_image_black_36dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/tvPrincipal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Colores"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorBotonActivado"
        android:layout_marginTop="15dp"
        android:layout_weight="0.01"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Colores"
        android:layout_weight="0.01"
        android:textAppearance="@style/TextAppearance.AppCompat"/>

    <TextView
        android:id="@+id/tvPrincipal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Porcentajes"
        android:layout_weight="0.01"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorBotonActivado"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.26">
        <LinearLayout
            android:id="@+id/L1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="No existe porcentaje previo"
                android:textAppearance="@style/TextAppearance.AppCompat" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
